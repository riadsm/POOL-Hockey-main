<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_group_page"
    android:orientation="vertical"
    tools:context=".activityJava.groups.GroupListPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/layout_border">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="20dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="30sp"
            android:text="@string/groups_title"
            tools:ignore="RtlSymmetry,SmallSp"
            android:paddingStart="20dp">

        </TextView>

        <ImageButton
            android:id="@+id/add_group_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".4"
            android:src="@drawable/ic_add"
            android:background="@drawable/add_image_button"
            android:contentDescription="@string/add_group">

        </ImageButton>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:id="@+id/group_scroll_view">

        </LinearLayout>
    </ScrollView>
</LinearLayout>